<script>
    $("#loginButton").click(function() {
        var email = $("#email").val();
        var password = $("#password").val();

        if( email && password ) {
            $.post('/serviceprovider/login', {
                email: email,
                password: password},
                function(res) {
                    alert("Login Successful");
                    if(res.redirectTo)
                        window.location = res.redirectTo;
                }
            ).fail(function(res){
                alert("Error: " + res.getResponseHeader("error"));
            });
        }
    });

    $(document).keydown(function(e) {
        if(e.keyCode == 13){
            $("#loginButton").click();
        }
    });
</script>